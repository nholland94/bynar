name "bynar"
description "A Vulkan compute example"
authors "Nathan Holland"
copyright "Copyright Â© 2016, Nathan Holland"
license "proprietary"

dependency "erupted" version="~>1.4.4"
subConfiguration "erupted" "with-derelict-loader"

configuration "app" {
  targetType "executable"
  excludedSourceFiles "source/benchmark.d"
}

configuration "benchmark" {
  targetType "executable"
  mainSourceFile "source/benchmark.d"
  excludedSourceFiles "source/app.d"
}
